<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/tv_ts_ds_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Time"
	        android:paddingLeft="10dp"
	        android:textStyle="bold"
	        android:textColor="@color/black"/>
	     <TextView
	        android:id="@+id/tv_ts_ds_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Day"
	        android:textStyle="bold"
	        android:paddingLeft="10dp"
	        android:textColor="@color/black"/>
	</LinearLayout>
	<LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView
         	android:id="@+id/tv_ts_ds_inst_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Instructor Name"
            android:layout_weight="2"
            android:textColor="@color/texts1" />

        <TextView
            android:id="@+id/tv_ts_ds_stud_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Student Name"
            android:textColor="@color/texts1" />

        <TextView
            android:id="@+id/tv_ts_ds_stud_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Age"
            android:textColor="@color/texts1" />

        <TextView
            android:id="@+id/tv_ts_ds_lvl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Level"
            android:textColor="@color/texts1" />
		<TextView
		   android:id="@+id/tv_ts_ds_lvl_type"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="L Type"
           android:textColor="@color/texts1" />
		<TextView 
		    android:id="@+id/tv_ts_ds_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/texts1"
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:text="Comment"/>
     </LinearLayout>
</LinearLayout>
