<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/txt_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/balloon_incoming_normal_9"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:visibility="visible" >

        <TextView 
            android:id="@+id/from_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#5AD0FA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/selector_textview"
            android:visibility="gone"
            />
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:text="hi "
            android:textColor="@color/black"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/time_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receive_msg"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:text="2:52 PM"
            android:textColor="#979797"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/balloon_incoming_normal_9"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/attach_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receive_msg"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:text="2:52 PM"
            android:textColor="#979797"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>